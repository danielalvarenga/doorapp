<p id="notice"><%= notice %></p>

<h1><%= User.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:username) %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= link_to t('helpers.edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('helpers.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('helpers.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.new'), new_admin_user_path %>
