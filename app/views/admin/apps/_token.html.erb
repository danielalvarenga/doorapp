<% if app.token %>
	<div>
		<p><strong>API Token:</strong></p>
		<p><%= app.token.secret_key if app.token %></p>
	</div>
	<div>
		<p>
			<%= link_to t('helpers.submit.update', Token), token_path(app.token) %> |
			<%= link_to t('helpers.destroy'), app.token, method: :delete, data: { confirm: 'Are you sure?' } %>
		<p>
	</div>
<% else %>
	<div>
		<p><strong>API Token:</strong></p>
		<p><%= t('helpers.not_token') %></p>
	</div>
	<div>
		<p><%= link_to t('helpers.submit.create', model: 'Token'), token_path(app) %><p>
	</div>
<% end %>
